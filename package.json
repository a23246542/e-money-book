{
  "name": "e-money-book",
  "jest": {
    "resetMocks": false,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "@craco/craco": "^6.1.1",
    "@reach/router": "^1.3.4",
    "@testing-library/user-event": "^12.2.2",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.3",
    "history": "^4.10.1",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "json-server": "^0.16.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-ionicons": "^3.1.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "recharts": "^2.0.3",
    "scheduler": "0.14.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"cross-env PORT=3006 HTTPS=true craco start\" \"npm run mock\"",
    "server": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "format": "prettier src/**/*.{js,jsx,scss,css,md} --write && eslint src/**/*.{js,jsx} --fix",
    "lint": "eslint src/**/*.{jsx,js} --fix",
    "mock": "json-server --watch db.json --port 3003"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "warn",
      "react-hooks/exhaustive-deps": "warn",
      "no-undef": "warn",
      "no-restricted-globals": "warn",
      "no-unused-vars": "off",
      "no-case-declarations": "warn",
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "react/no-unescaped-entities": "warn",
      "react/display-name": "warn",
      "jsx-a11y/anchor-is-valid": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "editor.formatOnSave": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "0.0.0-8e5adfbd7",
    "jest-fix-undefined": "^0.1.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.2.1"
  },
  "proxy": "http://localhost:3003"
}
